<h2 class="page-header">All authors</h2>
<form action="/authors" method="GET">
  <label for="name">Name</label>
  <input type="text" name="name" value="<%= searchOptions.name %>">
  <button type="submit">Search</button>
</form>
<br>
<% authors.forEach(author => { %>
  <div><%= author.name %></div>
  <div class="btn-row">
    <a class="btn btn-primary" href="/authors/<%= author.id %>">View author</a>
    <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Edit author</a>
    <%- include('../partials/deleteForm', { url: `/authors/${author.id}` }) %>
  </div>
<% }) %> 